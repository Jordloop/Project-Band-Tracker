@{
  Layout ="Shared/_Layout.cshtml";
}
<h2>@Model["Band"].GetName()</h2>
@if (@Model["Venue"].Count != 0)
{
  <ol>
    @foreach (var venue in @Model["Venue"])
    {
      <li><a href="/venue/@venue.GetId()">@venue.GetName()</a></li>
    }
  </ol>
}

<form action='/band/add-venue/@Model["Band"].GetId()' method="post">
  <select name = "venue-id">
  @foreach (var venue in Model["allVenues"])
  {
    <option value="@venue.GetId()">@venue.GetName()</option>
  }
  </select>
  <button type="submit">Add Venue</button>
</form>
