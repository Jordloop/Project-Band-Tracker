@{
  Layout ="Shared/_Layout.cshtml";
}
<ul>
  @if (@Model.Count != 0 )
  {
    <div class="row">
    @foreach (var band in Model)
    {
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <div class="caption">
            <h3>@band.GetName()</h3>
            <p><a href="/band/@band.GetId()" class="btn btn-primary" role="button">View Band</a></p>
          </div>
        </div>
      </div>
    }
  </div>
  }
  <a href="band/add">Add Band</a>
</ul>
